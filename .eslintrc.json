{
    "env": {
        "es6": true,
        "node": true,
        "commonjs": true
    },
    "extends": ["eslint:recommended", "prettier"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "jest": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": ["error", {
           "endOfLine":"auto"
         }],
        "no-console": [
            1,
            {
                "allow": ["info", "warn", "error"]
            }
        ]
    },
    "plugins": [
        "prettier"
    ]
}